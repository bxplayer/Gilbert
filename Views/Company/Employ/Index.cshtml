@model IEnumerable<Gilbert.Models.vw_CR_HeaderPostulate>

@{
    ViewBag.Title = "Index";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <ol>
            <li><a href="index.html">Home</a></li>
            <li>Listado puestos de trabajo</li>
        </ol>

    </div>
</section><!-- End Breadcrumbs -->

<section class="inner-page">
    <div class="container">

        <div class="section-title">
            <h2>Listado puestos de trabajo</h2>
        </div>

        <div class="float-end mb-2">
            @Html.ActionLink("Create New", "Create", null, new { @class = "link-custom" })
        </div>



        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FinishDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SDescrip)
                    </th>
                    @*<th>
                @Html.DisplayNameFor(model => model.LDescrip)
            </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.IDStatus)
                    </th>
                    <th class="text-end">
                        @Html.DisplayNameFor(model => model.Postulantes)
                    </th>

                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr  class="align-middle">
                        <td>
                            @Html.Raw(item.StartDate.ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            @Html.Raw(item.FinishDate.ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SDescrip)
                        </td>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.LDescrip)
                </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.IDStatus)
                        </td>
                        <td class="text-end">
                            @Html.DisplayFor(modelItem => item.Postulantes)
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-custom btn-sm" })
                                @Html.ActionLink("Download QR", "Download", new { id = item.ID }, new { @class = "btn btn-outline-custom btn-sm" })
                            </div>                                
                        </td>
                        @{var qr = "/Images/QR/" + item.Unique_ID + ".png"; }
                        <td class="text-end"><img src=@qr width="50" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
